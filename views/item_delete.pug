extends layout 

block content 

  h1 #{title}: #{item.name}

  p Are you sure you wan't to delete this item?

  form(method='POST' action='')
    div.form-group 
      input#itemid.form-control(
        type='hidden',
        name='itemid',
        required='true',
        value=item._id
      ) 
    button.btn.btn-danger(type='submit') Delete