extends layout 

block content 

  h1=title 

  form(method='POST', action='')
    div.form-group
      label(for='name') Name
      input#name.form-control(
        type='text',
        name='name',
        placeholder='New category name',
        value=(category === undefined ? '' : category.name),
        required='true'
      )
    div.form-group 
      label(for='description') Describe this category
      input#description.form-control(
        type='text',
        name='description',
        placeholder='Describe this category',
        value=(category === undefined ? '' : category.description),
        required='true'
      )
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li=error.msg 

  if error 
    p Error: #{error} 